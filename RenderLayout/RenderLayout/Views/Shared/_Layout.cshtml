<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">

        @RenderPage("~/Views/Shared/_Topo.cshtml") <!-- Adiciona parte na página. Neste caso o topo dela-->

        
            @RenderBody()
            <hr />
            @if (IsSectionDefined("rodape"))
            {
                @RenderSection("rodape")
            }
            else
            {
                @Html.Partial("_Rodape") <!-- executa somente se não houver uma seção chamada rodapé na página -->
            }

        

    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

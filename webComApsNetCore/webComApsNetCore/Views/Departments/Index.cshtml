@model IEnumerable<webComApsNetCore.Models.Department>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <div class="form-group">
                    <label for="minDate">Min Date</label>
                    <input type="date" class="form-control" name="minDate" value=@ViewData["minDate"] />
                </div>
                <div class="form-group">
                    <label for="maxDate">Max Date</label>
                    <input type="date" class="form-control" name="maxDate" value=@ViewData["maxDate"] />
                </div>
                <div class="form-group">
                    <label for="nome">Nome</label>
                    <input type="text" class="form-control" name="nome" value=@ViewData["nome"] />
                </div>
            </div>
            <button type="submit" class="btn-primary">Filter</button>
        </form>
    </div>
</nav>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table" id="tabelaDados">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
<div>
    <button class="btn" onclick="exportTableToExcel('tabelaDados', 'tabelaDados')">
        <i class="fa fa-download"></i> Download
    </button>
</div>
<div>
    <button id="btnExport">Export to excel</button>
</div>

@section scripts{
    <script src="~/js/funcoes-compartilhadas.js"></script>
}
